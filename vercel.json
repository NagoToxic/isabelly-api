{
  "version": 2,
  "builds": [
    {
      "src": "backend/package.json",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**/*", 
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/backend/index.js",
      "dest": "/api/(.*)"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}