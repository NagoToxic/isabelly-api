{
  "version": 2,
  "builds": [
    {
      "src": "backend/package.json",
      "use": "@vercel/node",
      "config": {
        "installCommand": "cd backend && npm install --ignore-scripts"
      }
    }
  ],
  "routes": [
    {"src": "/api/(.*)", "dest": "/backend/index.js"},
    {"src": "/(.*)", "dest": "/frontend/$1"}
  ]
}